@import '../../../styles/variables.styl'

.talks-section
  text-align center

  &__header
    color color-cyan-darker
    margin 1rem 0

  &__day
    font-size 2rem
    font-weight lighter

  &__date
    font-size 3rem
    font-weight bold

  &__card
    max-width 445.61px
    min-width 260.11px
    height 100%

  &__events
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-around
    align-items stretch
    background-color color-bg
    border-radius 0.549450549rem
    margin 0 auto

  &__event
    text-align center
    margin 1rem
    padding-top 2rem
    position relative

  &__time
    color color-text
    font-size 1.3rem
    font-weight lighter
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    white-space nowrap


    