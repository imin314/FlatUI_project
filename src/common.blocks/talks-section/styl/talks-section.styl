.talks-section
  text-align center

  &__header
    color color-cyan-darker
    margin 1rem 0

  &__day
    font-size 2rem
    font-weight lighter

    @media screen and (max-width: 992px)
      font-size 1.5rem

  &__date
    font-size 3rem
    font-weight bold

    @media screen and (max-width: 992px)
      font-size 2rem

  &__card
    max-width 445.61px
    min-width 260.11px
    font-size 1rem
    height 100%

  &__events
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-around
    align-items stretch
    background-color color-bg
    border-radius 10px
    margin 0 auto

    @media screen and (max-width: 992px)
      flex-wrap wrap
      max-width 600px

  &__event
    text-align center
    margin 1rem
    padding-top 2rem
    position relative

    &:last-child
      @media screen and (max-width: 992px)
        margin-bottom 1rem

    @media screen and (max-width: 992px)
      margin-bottom 0

  &__time
    color color-text
    font-size 1.3rem
    font-weight lighter
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    white-space nowrap
    
    @media screen and (max-width: 992px)
      font-size 1.1rem
  


    