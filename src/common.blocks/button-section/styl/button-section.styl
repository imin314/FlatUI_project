.button-section
    width 100%

    &__header
        margin-bottom 5rem
        @media screen and (max-width: screen-sm)
            margin-bottom 3rem
    &__container
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content space-between
    &__column
        margin 0 auto
        display flex
        flex-direction column
        flex-wrap wrap
        justify-content normal
        flex remify(285px) 1 0
        height 12rem
        @media screen and (max-width: 689px)
            max-width 380px
        &:first-child
            @media screen and (min-width: 720px)
                margin-right 4%
    &__button
        margin-bottom 1.3rem
        &:nth-child(-n+3)
            @media screen and (min-width: 720px)
                margin-right 8%
        &_size_small
            margin-top remify(14px)
            &:nth-last-child(-n+3)
                @media screen and (max-width: 689px)
                    order: -1