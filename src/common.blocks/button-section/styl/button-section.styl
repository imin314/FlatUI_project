@import '../../../styles/mixins.styl'

.button-section
  width 100%

  &__title
    sectionTitle()
    margin-bottom 5rem
    @media screen and (max-width: 672px)
      margin-bottom 3rem

  &__container
    display flex
    flex-flow row wrap
    justify-content space-between

  &__column
    display flex
    flex-flow column wrap
    justify-content normal
    flex 15.65934065934066rem 1 0
    align-content space-around
    height 12rem
    margin 0 auto

    &:first-child
      @media screen and (min-width: 700px)
        margin-right 4%

  &__button
    margin-bottom 1.2rem
    width 8.406593406593407rem

    &:nth-child(-n+3)
      @media screen and (min-width: 700px)
        margin-right 8%

    &_size_small
      width 5.604395604395605rem
      margin-top 0.769230769230769rem

      &:nth-last-child(-n+3)
        @media screen and (max-width: 672px)
          order -1