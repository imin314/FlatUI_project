@import '../../../styles/mixins.styl'

.button-section
  width 100%

  &__title
    sectionTitle()
    margin-bottom 5rem
    
    @media screen and (max-width: 700px)
      margin-bottom 3rem

  &__container
    display flex
    flex-flow row wrap
    justify-content space-around

    @media screen and (max-width: 700px)
      max-width 31rem

  &__column
    display flex
    flex-flow column wrap
    justify-content normal
    flex 15.65934065934066rem 1 0
    align-content space-around
    height 12rem
    margin 0 auto

    &:first-child
      @media screen and (min-width: 700px)
        margin-right 4%

  &__button
    width fit-content
    margin-bottom 1.2rem

    &_size_small
      margin-top 0.769230769230769rem

      @media screen and (min-width: 700px)
        ^[0]__column:nth-child(even) &
          order 2
          margin-left 8%
        
        ^[0]__column:nth-child(odd) &
          margin-right 8%