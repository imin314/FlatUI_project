.profile-section
	&__header
		margin-bottom remify(37px)
		letter-spacing 0.05rem
		word-spacing 0.3rem

	&__container
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-around
	&__card
		margin-bottom 2rem
		font-size 1rem
		@media screen and (max-width: 900px)
			margin-right 0.5rem
			margin-left 0.5rem
		@media screen and (min-width: 1000px)
			font-size 1.2rem
		@media screen and (max-width: 420px)
			font-size 0.8rem