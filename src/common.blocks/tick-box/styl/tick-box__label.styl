.tick-box__label
	background-color #e5e5e5
	border 1px solid #e5e5e5
	border-radius 50%
	cursor pointer
	height 45px
	left 0
	position absolute
	top 0
	width 45px
	cursor pointer
	&::after
		border 3px solid #c0c0c0
		border-top none
		border-right none
		content ""
		height 13px
		left 11px
		position absolute
		top 11px
		transform rotate(-45deg)
		width 21px