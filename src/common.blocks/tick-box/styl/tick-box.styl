.tick-box
  position relative
  display inline-block
  width 31px
  height @width
  noselect()

  &__input
    display none

    &:checked + ^[0]__checkmark
      background-color color-cold
      border-color color-cold

      &::after
        border-color white

  &__checkmark
    width 31px
    height @width
    background-color color-bg
    border 1px solid color-bg
    border-radius 50%
    cursor pointer
    transition 0.3s
    outline none

    &::after
      content ''
      position absolute
      left 8px
      top 9px
      width 14px
      height 8px
      border 2px solid #c0c0c0
      border-top none
      border-right none
      transform rotate(-45deg)

    &:focus
      box-shadow 0 0 7px color-outline
  
  &_color_warm
    & ^[0]__input:checked + ^[0]__checkmark
      background-color color-warm
      border-color color-warm