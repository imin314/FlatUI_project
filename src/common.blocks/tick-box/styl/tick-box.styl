.tick-box
	width 45px
	height 45px
	position relative
	display inline-block
	& input[type="checkbox"]
		display none
	& input[type="checkbox"]:checked + .tick-box__label
		background-color color-cold
		border-color color-cold
	& input[type="checkbox"]:checked + .tick-box__label::after
		border-color white

@import 'tick-box__label.styl'