.arrow-button
	cursor pointer
	display inline-block
	width 66px
	height @width
	border 4px color-cold solid
	border-radius 50%
	background-color white
	&:hover, &:focus
		background-color color-cold
		& .arrow-button__arrow
			background-color color-cold
			border-color white
	&_disabled
		pointer-events none
		background-color color-bg
		border-color color-bg
		& .arrow-button__arrow
			background-color color-bg
			border-color white
	
	&_direction_right
		&:active
			transform translateX(1px)
		& .arrow-button__arrow
			transform rotate(-45deg)
			margin-top 18px
			margin-left 12px
		
	&_direction_left
		&:active
			transform translateX(-1px)
		& .arrow-button__arrow
			transform rotate(135deg)
			margin-top 18px
			margin-left 23px

	&__arrow
		border solid color-cold
		border-width 0 5px 5px 0
		width 23px
		height @width
