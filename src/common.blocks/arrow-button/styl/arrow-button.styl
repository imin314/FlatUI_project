.arrow-button
	font-size inherit
	cursor pointer
	display inline-block
	width 3.626373626373626em
	height @width
	border 0.21978021978022em color-cold solid
	border-radius 50%
	background-color white
	position relative
	&:hover, &:focus
		background-color color-cold
		& .arrow-button__arrow
			background-color color-cold
			border-color white
	&_disabled
		pointer-events none
		background-color color-bg
		border-color color-bg
		& .arrow-button__arrow
			background-color color-bg
			border-color white
	
	&_direction_right
		&:active
			transform translateX(1px)
		& .arrow-button__arrow
			transform translate(30%, -50%) rotate(-45deg)
			right 50%
			
		
	&_direction_left
		&:active
			transform translateX(-1px)
		& .arrow-button__arrow
			left 50%
			transform translate(-30%, -50%) rotate(135deg)

	&__arrow
		border solid color-cold
		border-width 0 0.274725274725275em 0.274725274725275em 0
		width 1.263736263736264em
		height @width
		position absolute
		top 50%
