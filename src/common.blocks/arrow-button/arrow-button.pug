mixin arrowButton(settings)
  - const { direction, disabled } = settings;
  - const directionModifiers = {
  -   left: 'arrow-button_direction_left',
  -   right: 'arrow-button_direction_right',
  - }
  - const disabledModifier = 'arrow-button_disabled';
  - let className = 'arrow-button js-arrow-button';
  - if (direction in directionModifiers) {
  -   className += ` ${directionModifiers[direction]}`; 
  - }
  - let tabValue = '0';
  - if (disabled) {
  -   className += ` ${disabledModifier}`;
  -   tabValue = '-1';
  - }
  a(class = className tabindex = tabValue)
    .arrow-button__arrow