include ../tick-box/tick-box.pug

mixin passSelector()
	section.pass-selector
		h2.pass-selector__header.section-title Find the conference pass for you
		.pass-selector__options
			.pass-selector__column
			.pass-selector__column
			.pass-selector__column
			.pass-selector__row
				h3.pass-selector__pass-name Premium
					br
					| Pass
				h3.pass-selector__pass-name 1 Track
					br
					| Pass
				h3.pass-selector__pass-name Daily
					br
					| Pass
			.pass-selector__row
				p.pass-selector__price $995
				p.pass-selector__price $575
				p.pass-selector__price $235
			.pass-selector__row
				p.pass-selector__text Visit any events without limitation
				p.pass-selector__text Visit all events in a track
				p.pass-selector__text Attend 1 event per day on a conference week
			.pass-selector__row
				.pass-selector__tickbox
					+tickBox('1', 'tickbox', 'tickbox1', true, true)
				.pass-selector__tickbox
					+tickBox('2', 'tickbox', 'tickbox2', false, true)
				.pass-selector__tickbox
					+tickBox('3', 'tickbox', 'tickbox3', false, true)