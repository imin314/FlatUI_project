include ../map/map.pug

mixin mapSection()
    .map-section
        .map-section__header location
        .map-section__container
            .map-section__map
                +map()
            .map-section__footer
                .map-section__title Meet us!
                .map-section__address
                    div 1259 California st
                    div San francisco, Ca
                .map-section__icons
                    .map-section__search
                    .map-section__marker