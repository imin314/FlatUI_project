.map-section__header
	text-transform uppercase
	font-size 34.69px
	color color-text
	font-weight bold
	text-align center
	margin-bottom 57px

.map-section__container
	width 100%

.map-section__map
	width 100%
	height 400px
	border-top-left-radius 10px
	border-top-right-radius 10px
	overflow hidden
	position relative

.map-section__footer
	padding 40px 60px
	background-color color-warm
	border-bottom-left-radius 10px
	border-bottom-right-radius 10px
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content space-between
	align-items center

.map-section__title
	font-family font-family-light
	color white
	font-size 58px
	flex-grow 0
	font-weight normal
	margin-right 54px
	line-height 54px

.map-section__address
	flex-grow 0
	& div
		color white
		text-transform uppercase
		font-size 24.09px
		font-weight bold

.map-section__icons
	flex-grow 1
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content flex-end
	align-items center

.map-section__search
	flex-shrink 0
	flex-grow 0
	width 30px
	height @width 
	border-radius 50%
	border 3px solid white
	position relative
	margin-right 29px
	box-sizing content-box
	cursor pointer
	&::before
		content ''
		box-sizing content-box
		height 3px
		width 17px
		position absolute
		border-left 16px solid white
		border-right 16px solid white
		top 14px
		left -10px
	&::after
		content ''
		box-sizing content-box
		height 16px
		width 3px
		position absolute
		border-top 17px solid white
		border-bottom 17px solid white
		top -10px
		left 13px

.map-section__pin
	flex-shrink 0
	flex-grow 0
	width 32px
	height 44px
	cursor pointer

.map-section__main-pin
	width 76px
	height 107px
	position absolute
	top 50%
	left 50%
	filter drop-shadow(2em 1em 1em rgba(0,0,0,0.25))
