.speaker-card
	background-color color-warm
	border-radius 10px
	overflow hidden
	width 100%
	height 100%
	padding 1em
	display flex
	flex-direction column
	&__user-card
		width 100%
		margin-bottom 1rem
	&__text
		font-size 1em
		font-weight lighter
		text-align center
		color white
		max-height 8.3em
		line-height 1.2em
		flex-grow 1