@import '../../../styles/variables.styl'

.speaker-card
  display flex
  flex-direction column
  width 100%
  height 100%
  padding 1rem
  background-color color-orange
  border-radius 0.549450549rem
  overflow hidden

  &__profile-card
    width 100%
    margin-bottom 1rem
    
  &__text
    font-size 1rem
    font-weight lighter
    text-align center
    max-height 8.5rem
    color white
    flex-grow 1