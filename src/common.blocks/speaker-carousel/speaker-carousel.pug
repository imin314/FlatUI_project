include ../speaker-card/speaker-card.pug
include ../arrow-button/arrow-button.pug

mixin speakerCarousel()
  section.speaker-carousel
    .speaker-carousel__cards.js-speaker-carousel__cards
      .speaker-carousel__card-wrapper
        each item in speakers
          .speaker-carousel__card
            +speakerCard(item)
    .speaker-carousel__controls
      .speaker-carousel__left-button.js-speaker-carousel__left-button
        +arrowButton({ direction:'left', size: 'small', disabled: true })
      a.speaker-carousel__link.js-speaker-carousel__link View all speakers
      .speaker-carousel__right-button.js-speaker-carousel__right-button
        +arrowButton({ direction:'right', size: 'small' })