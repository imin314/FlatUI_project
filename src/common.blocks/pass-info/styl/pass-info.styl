@import '../../../styles/variables.styl'

.pass-info
  display flex
  flex-flow column nowrap
  height 100%
  padding 0.5rem
  text-align center

  @media screen and (max-width: 425px)
    padding 0.25rem

  &__header
    margin-bottom 1rem
    padding-bottom 1rem
    border-bottom 0.10989011rem solid color-orange

    @media screen and (max-width: 425px)
      margin-bottom 0.8rem
      padding-bottom 0.8rem

  &__name
    text-transform capitalize
    color color-orange
    font bold 2.5rem font-family

    @media screen and (max-width: 768px)
      font-size 1.8rem

    @media screen and (max-width: 600px)
      font-size 1.5rem

    @media screen and (max-width: 425px)
      font-size 1rem

  &__price
    margin-bottom 1rem
    font lighter 2rem font-family
    color color-text

    @media screen and (max-width: 768px)
      font-size 1.7rem

    @media screen and (max-width: 600px)
      font-size 1.3rem

    @media screen and (max-width: 425px)
      font-size 1rem
      margin-bottom 0.8rem

  &__text
    flex-grow 1
    margin-bottom 1rem
    font lighter 1rem font-family
    color color-text
