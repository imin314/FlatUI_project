.event-carousel
	display -webkit-box
	display flex
	justify-content left
	align-items center
	background-color #c6c6c6
	flex-wrap wrap
	&__link
		text-align right
		width 100%
		flex-shrink 0
		color color-warm
		text-decoration underline
		padding 0.5rem 1rem 0rem
		&:hover
			text-decoration none
		&:active
			text-decoration underline
	&__cards
		width 100%
		height 21em
		padding 10px 10px 0 10px
		font-size 1rem
		@media screen and (max-width: 992px)
			font-size 0.8rem
	&__card
		width 20em
		vertical-align top
		height 15em
		display inline-block
		overflow hidden
		margin-right 0.8em
		font-size 1.2em
		&:last-child
			margin-right 0
		&_visible
			display inline-block
	