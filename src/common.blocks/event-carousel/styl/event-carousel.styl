.event-carousel
	display -webkit-box
	display flex
	justify-content left
	align-items center
	background-color #c6c6c6
	flex-wrap wrap
	&__link
		text-align right
		width 100%
		flex-shrink 0
		color color-warm
		text-decoration underline
		padding 0.5rem 1rem 0rem
		&:hover
			text-decoration none
		&:active
			text-decoration underline
	&__cards
		flex-grow 1
		flex-shrink 1
		width 1000px
		height 380px
		padding 10px 10px 0 10px
	&__card
		width 430px
		vertical-align top
		height 350px
		display inline-block
		overflow hidden
		margin-right 0.8rem
		&:last-child
			margin-right 0
		&_visible
			display inline-block
	