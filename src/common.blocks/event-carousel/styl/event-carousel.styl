.event-carousel
  display -webkit-box
  display flex
  justify-content left
  align-items center
  background-color #c6c6c6
  flex-wrap wrap
  &__link
    text-align right
    width 100%
    flex-shrink 0
    color color-warm
    text-decoration underline
    padding 0.5rem 1rem 0rem
    &:hover
      @media (hover:hover)
        text-decoration none
    &:active
      @media (hover:hover)
        text-decoration underline
      @media (hover:none)
        text-decoration none
  &__cards
    width 100%
    padding 10px 10px 0 10px
    font-size 1rem
    @media screen and (max-width: 992px)
      font-size 0.8rem
    @media screen and (max-width:375px)
      font-size 0.6rem
  &__card-wrapper
    display flex
    align-items stretch
    justify-content space-between
  &__card
    width 20em
    overflow hidden
    margin-right 0.8em
    font-size 1.2em
    &:last-child
      margin-right 0
  