@import '../../../styles/mixins.styl'

.slider-section
  &__title
    sectionTitle()
    margin-bottom 3.3rem
    
  &__container
    display flex
    justify-content space-between
    flex-direction row
    flex-wrap wrap

  &__slider
    flex 225px 1 1
    margin-bottom 2.5rem
    max-width 700px
    min-width 225px

    &:first-child
      @media screen and (min-width: 701px)
        margin-right 10%
    
    @media screen and (max-width: 700px)
      margin-right 5%
      margin-left 5%