@import '../../../styles/mixins.styl'

.slider-section
  &__title
    sectionTitle()
    margin-bottom 3.3rem
    
  &__container
    display flex
    justify-content space-between
    flex-direction row
    flex-wrap wrap

  &__slider
    flex 225px 1 1
    margin-bottom 2.5rem
    max-width 700px
    min-width 225px

    &:first-child
      margin-right 10%