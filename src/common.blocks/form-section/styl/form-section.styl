@import '../../../styles/mixins.styl'

.form-section
  &__title
    sectionTitle()
    margin-bottom 3.8rem
    line-height 1rem
    letter-spacing 0.08rem

  &__container
    display flex
    justify-content space-between
    flex-direction row

    @media screen and (max-width: 700px)
      flex-wrap wrap

  &__form
    min-width 350px
    flex 372px 2 1
    margin 0 1.8rem 2.5rem 0

    @media screen and (max-width: 700px)
      margin-right 0

    @media screen and (max-width: 420px)
      min-width unset

  &__checkboxes
    flex 365px 1 2
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content space-around
    align-content flex-start

  &__toggles
    flex 100% 0 0
    margin-bottom 2.9rem
    text-align center

    & ^[0]__title
      margin-bottom 2.5rem

    @media screen and (max-width: 700px)
      flex 200px 1 1
  
  &__toggle
    display inline-block

    &:first-of-type
      margin-right 0.7rem

  &__tickboxes
    flex 100% 0 0
    text-align center

    & ^[0]__title
      margin-bottom 2.5rem
      word-spacing 0.2rem

    @media screen and (max-width: 700px)
      flex 200px 1 1

  &__tickbox
    display inline-block
    
    &:first-of-type
      margin 0 0.9rem 0 -0.9rem