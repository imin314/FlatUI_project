.search-box
	display flex
	flex-direction row
	flex-wrap nowrap

	&__input
		flex-grow 1

	&__input-field
		background color-bg
		font-size 1rem
		font-family ui-font-family
		letter-spacing remify(0.2px)
		padding remify(6px) remify(17px) remify(7px)
		color darken(color-bg, 40.5)
		border none
		border-top-left-radius 3px
		border-bottom-left-radius 3px
		width 100%
		-webkit-appearance none
		&_filled
			background-color color-warm
			color white

	&__button
		border none
		background-color color-warm
		border-top-right-radius 3px
		border-bottom-right-radius 3px
		cursor pointer
		-webkit-appearance none
		flex 43px 0 0
		position relative
		&::before
			content ""
			display block
			border remify(2px) white solid
			border-radius 50%
			width 0.75rem
			height @width
			position absolute
			top 50%
			left 50%
			transform translate(-65%, -60%)
		&::after
			content ""
			display block
			background-color white
			height remify(3px)
			width 0.55rem
			border-radius 2px
			position absolute
			top 60%
			left 50%
			transform rotate(45deg)
