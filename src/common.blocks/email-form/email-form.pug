include ../button/button.pug
include ../validation-input/validation-input.pug

mixin emailForm()
  form.email-form.js-email-form
    .email-form__input.email-form__input_type_name
      +validationInput({
        type: 'text',
        name: 'name',
        placeholder: 'Your Name',
      })
    .email-input.email-form__input_type_email
      +validationInput({
        type: 'email',
        name: 'email',
        placeholder: 'Your Email',
      })
    textarea.email-form__message(
      name="message"
      placeholder="Your Message"
      arealabel="Message"
    )
    .email-form__button.js-email-form__button
      +button({ title: 'submit', color: 'reverse' })