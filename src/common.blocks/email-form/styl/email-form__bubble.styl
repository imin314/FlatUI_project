.email-form__bubble
	display none
	width 139px
	padding 15px
	border-radius 10px
	position relative
	top -4px
	font-size 19.27px
	text-transform uppercase
	text-align center
	font-weight bold
	color white
	margin-left 15px
	&::before
		display none
		content ''
		position absolute
		top 20px
		left -5px
		width 10px
		height @width
		border-radius 3px
		transform rotate(45deg)

.email-form__bubble_error
	background-color color-warm
	display inline-block
	&::before
		background-color color-warm
		display inline-block

.email-form__bubble_good
	background-color color-cold
	display inline-block
	&::before
		background-color color-cold
		display inline-block	