@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.registration-form
  &__header
    position fixed
    padding 6rem 0 0
    top 0
    left 50%
    width 96%
    max-width 54.94505495rem
    background linear-gradient(rgba(255,255,255,1) 0%, rgba(255,255,255,1) 85%, rgba(255,255,255,0) 85%, rgba(255,255,255,0) 100%)
    z-index 100
    transform translateX(-50%)

  &__title
    pageTitle()

    @media screen and (max-width: 600px)
      font-size 1.5rem

  &__bread-crumbs
    width 100%
    margin 1rem 0

  &__stage_first
    width 100%
    max-width 43.95604396rem
    margin 0 auto

  &__stage_second
    margin-top 3rem
    overflow hidden

  &__stage_third
    display flex
    flex-flow row wrap
    justify-content center
    align-items center
    padding 0.5rem 1rem
    margin 2rem auto
    width 100%
    max-width 43.95604396rem
    background-color #bfcac8
    border-radius 0.549450549rem

  &__policy-tickbox
    flex 12.63736264rem 1 1
    margin-right 1rem

    @media screen and (max-width: 425px)
      flex 100% 0 0
      margin 0 0 0.5rem

  &__button
    flex auto 0 0