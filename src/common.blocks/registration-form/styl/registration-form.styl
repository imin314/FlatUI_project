.registration-form
  &__stage_first
    width 100%
    max-width 800px
    padding 2.5rem 1rem 1rem
    margin 0 auto
    background-color #bfcac8
    border-radius 10px

  &__name
    display flex
    margin 0 auto 1rem

  &__input
    flex 271px 1 1
    inputField()

  &__email
    margin-bottom 0.8rem
    display flex
    margin 0 auto 2rem

  &__bubble
    position relative
    width 5.21978021978022rem
    min-width 4.5rem
    padding 0.55rem
    margin-left 0.6593406593406593rem
    visibility hidden
    font-size 0.7rem
    text-transform uppercase
    text-align center
    font-weight bold
    color white
    border-radius 5px
    letter-spacing 0.06rem
    transition 0.3s
    transform translateX(-50px)

    &::before
      visibility hidden
      content ''
      position absolute
      top 50%
      left 0
      width 0.3296703296703297rem
      height @width
      border-radius 1px
      transform translate(-50%, -50%) rotate(45deg)

    &_type_error
      background-color color-warm
      visibility visible
      transform translateX(0)

      &::before
        background-color color-warm
        visibility visible

    &_type_good
      background-color color-cold
      visibility visible
      transform translateX(0)

      &::before
        background-color color-cold
        visibility visible

  &__subscribe
    margin 0 auto
    display flex
    justify-content center
    align-items center

  &__subscribe-text
    margin 0 0.5rem
    text-align center

  &__stage_second
    margin-top 3rem
    overflow hidden

  &__stage_third
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    padding 0.5rem 1rem
    margin 2rem auto
    width 100%
    max-width 800px
    font-size 1rem
    background-color #bfcac8
    border-radius 10px
    
    @media screen and (max-width:375px)
      font-size 0.8rem

  &__policy-checkbox
    flex auto 0 0

  &__policy-text
    flex 150px 1 1
    margin 0.5rem 1rem
    font-size inherit

  &__button
    flex auto 0 2
    text-align right
    font-size inherit