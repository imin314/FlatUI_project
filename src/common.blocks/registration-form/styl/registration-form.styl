@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.registration-form
  &__header
    position fixed
    padding 6rem 0 0
    top 0
    left 50%
    width 80%
    background linear-gradient(rgba(255,255,255,1) 0%, rgba(255,255,255,1) 87%, rgba(255,255,255,0) 87%, rgba(255,255,255,0) 100%)
    z-index 100
    transform translateX(-50%)

  &__title
    pageTitle()

  &__bread-crumbs
    width 100%
    margin 1rem 0

  &__stage_first
    width 100%
    max-width 800px
    margin 0 auto

  &__stage_second
    margin-top 3rem
    overflow hidden

  &__stage_third
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    padding 0.5rem 1rem
    margin 2rem auto
    width 100%
    max-width 800px
    font-size 1rem
    background-color #bfcac8
    border-radius 0.549450549rem

  &__policy-tickbox
    flex 230px 1 1
    margin-right 1rem

  &__button
    flex auto 0 0