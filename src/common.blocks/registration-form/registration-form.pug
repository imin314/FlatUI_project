include ../input-field/input-field.pug
include ../toggle-switch/toggle-switch.pug
include ../tick-box/tick-box.pug
include ../bread-crumbs/bread-crumbs.pug
include ../pass-selector/pass-selector.pug

mixin registrationForm(id)
	section.registration-form
		form.registration-form__form(id=id action='register.php' method='post')
			.registration-form__first-stage
				.registration-form__name
					.registration-form__input
						+inputField(type='text' name='name' placeholder='Your Name' arealabel='Name' required)
					.registration-form__bubble
				.registration-form__email
					.registration-form__input
						+inputField(type='email' id='email' name='email' placeholder='Your Email' arealabel='Email' required)
					.registration-form__bubble
				.registration-form__subscribe
					.registration-form__subscribe-text Subscribe to Web Talks newsletters
					.registration-form__checkbox
						+toggleSwitch(true)
			.registration-form__pass-selector
				+passSelector()
			.registration-form__last-stage
				.registration-form__policy-checkbox
					+tickBox('1', 'tickbox-policy', 'tickbox-policy', false)
				.registration-form__policy-text I agree with Web Talks Terms and Conditions and the Privacy Policy
				.registration-form__button
					+button({title: "register", color: "reverse"})
