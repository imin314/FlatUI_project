.banner-section
	width 100%
	background-color color-cold
	padding 7rem 2rem 4rem
	color white
	font-size 2rem
	text-align center
	background-image url('../assets/img/banner-bg3.jpg')
	background-size cover
	background-repeat no-repeat
	@media screen and (max-width:768px)
		font-size 1rem
	@media screen and (max-width: 425px)
		padding-top 4rem
	&__location
		font-size 0.8em
		display block
		font-weight lighter
		border 2px solid #80d8cb
		width max-content
		margin 0 auto
		padding 0.2em 0.5em
	&__title
		margin 1em auto
	&__name
		font-size 1.5em
		letter-spacing 0.05em
		font-weight 900
		line-height 1em
		display block
	&__tagline
		font-size 0.5em
		margin-top 0.5em
		display block
		font-weight lighter
	&__register-button
		width 300px
		margin 0 auto
		font-size 1rem
		@media screen and (max-width:425px)
			width:220px
			font-size 0.8rem