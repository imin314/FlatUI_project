include ../footer-link-list/footer-link-list.pug

mixin footerSection(footerData = {})
  -
    const {
      contacts = [],
      docs = [],
      copyright = 'Â© Web Talks. All rights reserved.'
    } = footerData;
  footer.footer-section
    .footer-section__contacts
      +footer-link-list({
        title: 'Contact Us',
        data: contacts,
        type: 'titled',
      })
