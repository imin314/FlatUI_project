.footer-section
	background-color color-text
	width 100%
	padding 2rem 3rem
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	color white
	font-size 0.8rem
	&__contacts
		width 50%
		flex-shrink 0
		text-align left
	&__list
		margin 0
		padding 0
	&__list-item
		margin 0 
		padding 0
		list-style none
		font-size 1em
		line-height 1.5em
		& a
			display block
			color inherit
			&:hover
				text-decoration none 
			&:active
				text-decoration underline
	&__header
		color color-cold
		font-size 1.2em
		font-weight bold
		margin-bottom 1rem
	&__links
		width 50%
		flex-shrink 0
		text-align right
	&__copyright
		width 100%
		text-align center
		font-size 1em
		margin-top 2rem