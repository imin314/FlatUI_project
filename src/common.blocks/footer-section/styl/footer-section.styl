@import '../../../styles/variables.styl'

.footer-section
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  width 100%
  padding 2rem 3rem
  color white
  background-color color-text

  @media screen and (max-width: 600px)
    padding 1.5rem 2rem

  @media screen and (max-width: 425px)
    padding 1.4rem

  &__header
    margin-bottom 1rem
    color color-cyan
    font-size 1.2rem
    font-weight bold

    @media screen and (max-width: 600px)
      font-size 1rem

    @media screen and (max-width: 425px)
      font-size 0.9rem

  &__contacts
    width 50%
    flex-shrink 0
    text-align left

  &__list
    margin 0
    padding 0

  &__list-item
    margin 0 
    padding 0
    list-style none
    font-size 1rem
    line-height 1.5rem

    @media screen and (max-width: 600px)
      font-size 0.8rem
      line-height 1.3rem
    
    @media screen and (max-width: 425px)
      font-size 0.7rem
      line-height 1.1rem


  &__link
    color inherit

    &:hover
      @media (hover:hover)
        text-decoration none 

    &:active
      @media (hover:hover)
        text-decoration underline
      @media (hover:none)
        text-decoration none

  &__docs
    width 50%
    flex-shrink 0
    text-align right
    
  &__copyright
    width 100%
    margin-top 2rem
    text-align center
    font-size 1rem

    @media screen and (max-width: 600px)
      font-size 0.8rem
    
    @media screen and (max-width: 425px)
      font-size 0.7rem
      margin 1.5rem auto 0
      max-width 150px

