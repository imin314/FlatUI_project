@import '../common.blocks/button/styl/jquery.materialripple.css'

.button
  text-decoration none
  cursor pointer
  display inline-block
  text-transform uppercase
  transition all .3s, visibility 0s
  overflow hidden
  text-align center
  padding 0.659340659340659rem
  font-size 0.857142857142857rem
  letter-spacing 0.035rem
  font-weight bold
  color color-cold-darker
  background-color white
  width remify(153px)
  border-radius 5px
  box-shadow inset 0 0 0 1px color-cold-darker, 0 4px 0 0 color-cold-darker
  &:hover
  &:focus
    @media (hover:hover)
      color white
      background-color color-cold
      box-shadow 0 4px 0 0 color-cold
  &:active
    @media (hover:none)
      color white
      background-color color-cold
      box-shadow 0 4px 0 0 color-cold
  &_active
    color white
    background-color color-cold
    box-shadow 0 4px 0 0 color-cold

  &_size_small
    font-size 0.714285714285714rem
    width remify(102px)
    padding 0.32967032967033rem

  &_size_responsive
    width 100%
    font-size inherit

  &_color_secondary
    color color-warm-darker
    background-color white
    border-color color-warm-darker
    box-shadow inset 0 0 0 1px color-warm-darker, 0 4px 0 0 color-warm-darker
    &:hover
      @media (hover:hover)
        color white
        background-color color-warm
        box-shadow 0 4px 0 0 color-warm
    &:active
      @media (hover:none)
        color white
        background-color color-warm
        box-shadow 0 4px 0 0 color-warm
    &.button_active
      color white
      background-color color-warm
      box-shadow 0 4px 0 0 color-warm

  &_color_reverse
    color white
    background-color color-cold
    box-shadow 0 4px 0 0 color-cold
    &:hover
    &:focus
      @media (hover:hover)
        color color-cold
        background-color white
        box-shadow inset 0 0 0 1px color-cold, 0 4px 0 0 color-cold
    &:active
      @media (hover:none)
        color color-cold
        background-color white
        box-shadow inset 0 0 0 1px color-cold, 0 4px 0 0 color-cold
    &.button_active
      color color-cold
      background-color white
      box-shadow inset 0 0 0 1px color-cold, 0 4px 0 0 color-cold