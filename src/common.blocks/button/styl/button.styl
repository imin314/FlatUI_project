@import '../common.blocks/button/styl/jquery.materialripple.css'

.button
	cursor pointer
	display inline-block
	text-transform uppercase
	transition all .3s
	overflow hidden
	text-align center
	padding 23.12px
	font-size 23.12px
	font-weight bold
	color #28a290
	background-color white
	width 227px
	border-radius 5px
	box-shadow inset 0 0 0 2px #28a290, 0 5px 0 0 #28a290
	&:hover
	&:focus
		color white
		background-color #4eb7a8
		box-shadow 0 5px 0 0 #28a290

@import 'button_size_small.styl'
@import 'button_color_secondary.styl'