@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'
@import './jquery.materialripple.css'

.button
  display inline-block
  width 8.406593406593407rem
  padding 0.659340659340659rem
  overflow hidden
  font-size 0.857142857142857rem
  font-weight bold
  text-align center
  text-decoration none
  text-transform uppercase
  letter-spacing 0.035rem
  color color-cyan-darker
  cursor pointer
  background-color white
  border solid 1px color-cyan-darker
  border-radius 5px
  box-shadow 0 4px 0 0 color-cyan-darker
  transition all .3s, visibility 0s

  &:hover
    @media (hover:hover)
      color white
      background-color color-cyan
      border-color color-cyan

  &:focus
  &:active
    color white
    background-color color-cyan
    border-color color-cyan

  &_size_small
    width 5.604395604395605rem
    padding 0.32967032967033rem
    font-size 0.714285714285714rem

  &_size_responsive
    width 100%
    font-size inherit

  &_color_orange
    color color-orange-darker
    background-color white
    border-color color-orange-darker
    box-shadow 0 4px 0 0 color-orange-darker

    &:hover
      @media (hover:hover)
        color white
        background-color color-orange
        border-color color-orange

    &:focus
    &:active
      color white
      background-color color-orange
      border-color color-orange

  &_color_reverse
    color white
    background-color color-cyan
    border 1px solid color-cyan
    box-shadow 0 4px 0 0 color-cyan-darker

    &:hover
      @media (hover:hover)
        color color-cyan
        background-color white
        border 1px solid color-cyan-darker
    
    &:focus
    &:active
      color color-cyan
      background-color white
      border 1px solid color-cyan-darker