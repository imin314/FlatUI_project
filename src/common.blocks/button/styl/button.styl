@import './jquery.materialripple.css'

.button
  display inline-block
  width 8.406593406593407rem
  padding 0.659340659340659rem
  overflow hidden
  font-size 0.857142857142857rem
  font-weight bold
  text-align center
  text-decoration none
  text-transform uppercase
  letter-spacing 0.035rem
  color color-cyan-darker
  cursor pointer
  background-color white
  border-radius 5px
  box-shadow inset 0 0 0 1px color-cyan-darker, 0 4px 0 0 color-cyan-darker
  transition all .3s, visibility 0s

  &:hover
  &:focus
    @media (hover:hover)
      color white
      background-color color-cyan
      box-shadow 0 4px 0 0 color-cyan

  &:active
    @media (hover:none)
      color white
      background-color color-cyan
      box-shadow 0 4px 0 0 color-cyan

  &_active
    color white
    background-color color-cyan
    box-shadow 0 4px 0 0 color-cyan

  &_size_small
    width remify(102px)
    padding 0.32967032967033rem
    font-size 0.714285714285714rem

  &_size_responsive
    width 100%
    font-size inherit

  &_color_orange
    color color-orange-darker
    background-color white
    border-color color-orange-darker
    box-shadow inset 0 0 0 1px color-orange-darker, 0 4px 0 0 color-orange-darker

    &:hover
    &:focus
      @media (hover:hover)
        color white
        background-color color-orange
        box-shadow 0 4px 0 0 color-orange

    &:active
      @media (hover:none)
        color white
        background-color color-orange
        box-shadow 0 4px 0 0 color-orange

    &^[0]_active
      color white
      background-color color-orange
      box-shadow 0 4px 0 0 color-orange

  &_color_reverse
    color white
    background-color color-cyan
    box-shadow 0 4px 0 0 color-cyan

    &:hover
    &:focus
      @media (hover:hover)
        color color-cyan
        background-color white
        box-shadow inset 0 0 0 1px color-cyan, 0 4px 0 0 color-cyan

    &:active
      @media (hover:none)
        color color-cyan
        background-color white
        box-shadow inset 0 0 0 1px color-cyan, 0 4px 0 0 color-cyan

    &.^[0]_active
      color color-cyan
      background-color white
      box-shadow inset 0 0 0 1px color-cyan, 0 4px 0 0 color-cyan