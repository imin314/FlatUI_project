.news-card
	font-size inherit
	background-color color-warm
	border-radius remify(5px)
	overflow hidden
	width 100%
	height @width
	text-align left
	display flex
	&__image
		background-repeat no-repeat
		background-position 0px 0px
		background-clip border-box
		background-size cover
		width 33%
		height 100%
		display inline-block
		background-color #e5e5e5

	&__content
		font-size 1em
		padding 1.3em 1.6em
		overflow hidden
		display inline-block
		width 67%
		height 100%

	&__title
		font-size 2em
		line-height 1em
		margin-bottom 0.35em
		color white
		font-weight lighter
		letter-spacing -0.01em

	&__date
		font-size 0.785714285714286em
		letter-spacing 0.08em
		color white
		margin-bottom 1.15em
		font-weight bold
		text-transform uppercase

	&__text
		font-size 0.785714285714286em
		color white
		font-weight normal
		letter-spacing 0.035em
		max-height 55%

	&_type_event
		background-color color-cold
		& .news-card__content
			padding 1.4em 1.5em
			position relative
		& .news-card__title
			font-size 0.892857142857143em
			color white
			font-weight bold
			text-transform uppercase
			letter-spacing 0.03em
		& .news-card__date
			font-size 1em
			letter-spacing unset
			line-height 1em
			margin-bottom 1.6em
		& .news-card__day
			font-size 5.214285714285714em
			letter-spacing -0.05em
			line-height 0.8em
			color white
			font-weight lighter
		& .news-card__month
			font-size 2.142857142857143em
			color white
			text-transform capitalize
			font-weight lighter
			margin-left 0.45em
		& .news-card__text
			font-size 0.785714285714286em
			color white
			font-weight normal
		& .news-card__button
			position absolute
			bottom 12%
			left 50%
			width 67%
			transform translateX(-50%)
			font-size 0.714285714285714em

	&_size_compact .news-card__title
		font-size 1.2em
	
	&_size_compact.news-card_type_event
		& .news-card
			&__content
				padding 1.2em 1.3em 0
			&__date
				margin-bottom 1em
			&__day
				font-size 3em
			&__title
				font-size 0.8em
				line-height 1.2em
			&__button
				bottom 4%
			&__text
				max-height 35%

	&_color_reverted
		background-color color-cold
		&.news-card_type_event
			background-color color-warm
