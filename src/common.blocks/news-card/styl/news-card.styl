@import '../../../styles/variables.styl'

.news-card
  display flex
  align-items stretch
  width 100%
  height 100%
  text-align left
  background-color color-orange
  border-radius 0.274725274725275rem
  overflow hidden

  &__image
    flex 6.758241758rem 0 2
    min-width 4.395604396rem
    background-repeat no-repeat
    background-position 0rem 0rem
    background-clip border-box
    background-size cover
    background-color inherit

  &__content
    display flex
    flex-direction column
    flex-wrap nowrap
    justify-content space-between
    flex 13.73626374rem 2 1
    padding 1.4rem 1.3rem 2.5rem 1.6rem
    overflow hidden

  &__title
    flex auto 0 0
    margin-bottom 0.7rem
    font-size 2rem
    line-height 1em
    color white
    font-weight lighter

  &__date
    flex auto 0 0
    margin-bottom 1rem
    font-size 0.8rem
    letter-spacing 0.05rem
    color white
    font-weight bold
    text-transform uppercase

  &__text
    flex auto 1 0
    font-size 0.8rem
    color white
    font-weight normal
    letter-spacing 0.036rem

  ~/_type_event
    background-color color-cyan

    & ^[0]__content
      position relative
      padding 1.4rem 1.5rem 1.6rem

    & ^[0]__date
      margin-bottom 1.4rem

    & ^[0]__day
      font-size 5.1rem
      letter-spacing -0.2rem
      line-height 4.1rem
      color white
      font-weight lighter

    & ^[0]__month
      font-size 2.1rem
      color white
      text-transform capitalize
      font-weight lighter
      margin-left 0.95rem

    & ^[0]__title
      margin-bottom 0.35rem
      font-size 0.9rem
      color white
      font-weight bold
      text-transform uppercase
      letter-spacing 0.03rem

    & ^[0]__text
      min-height 2.48rem
      margin-bottom 0.8rem
      color white
      font-weight normal

    & ^[0]__button
      width 87%
      font-size 0.714285714285714rem
      flex auto 0 0
      margin 0 auto

  ~/_size_compact
    & ^[0]__content
      padding 1.3rem 1.3rem

    & ^[0]__title
      font-size 1.2rem

    &^[0]_type_event
      & ^[0]__content
          padding 1.1rem 1.2rem 0.6rem
      & ^[0]__date
          margin-bottom 1rem
      & ^[0]__title
          font-size 0.8rem
          line-height 0.96rem
      & ^[0]__text
          margin-bottom 0.7rem

  ~/_color_reverted
    background-color color-cyan

    &^[0]_type_event
      background-color color-orange

  ~/_with-scrollbar
    & ^[0]__text
      max-height 6em
      overflow-y auto