.news-card
	font-size inherit
	background-color color-warm
	border-radius remify(5px)
	overflow hidden
	width 100%
	height @width
	text-align left
	display flex
	&__image
		background-repeat no-repeat
		background-position 0px 0px
		background-clip border-box
		background-size cover
		width 33%
		height 100%
		display inline-block
		background-color #e5e5e5

	&__content
		font-size 1em
		padding 1.3em 1.6em
		overflow hidden
		display inline-block
		width 67%
		height 100%
		display flex
		flex-direction column
		flex-wrap nowrap
		justify-content flex-start

	&__title
		font-size 2em
		line-height 1em
		margin-bottom 0.35em
		color white
		font-weight lighter
		letter-spacing -0.01em
		flex auto 0 0

	&__date
		font-size 0.785714285714286em
		letter-spacing 0.08em
		color white
		margin-bottom 1.15em
		font-weight bold
		text-transform uppercase
		flex auto 0 0

	&__text
		font-size 0.785714285714286em
		color white
		font-weight normal
		letter-spacing 0.035em
		flex auto 1 0
		margin-bottom 0.8em
		max-height 45%

	&_type_event
		background-color color-cold
		& .news-card__content
			padding 1.4em 1.5em 1.85em
			position relative
		& .news-card__title
			font-size 0.892857142857143em
			color white
			font-weight bold
			text-transform uppercase
			letter-spacing 0.03em
		& .news-card__date
			font-size 1em
			letter-spacing unset
			line-height 1em
			margin-bottom 1.6em
		& .news-card__day
			font-size 5.214285714285714em
			letter-spacing -0.05em
			line-height 0.8em
			color white
			font-weight lighter
		& .news-card__month
			font-size 2.142857142857143em
			color white
			text-transform capitalize
			font-weight lighter
			margin-left 0.45em
		& .news-card__text
			font-size 0.785714285714286em
			color white
			font-weight normal
			max-height 25%
		& .news-card__button
			width 87%
			font-size 0.714285714285714em
			flex auto 0 0
			margin 0 auto

	&_size_compact
		& .news-card__title
			font-size 1.2em
		& .news-card__text
			max-height 55%

	
	&_size_compact.news-card_type_event
		& .news-card
			&__content
				padding 1.2em 1.3em 0.7em
			&__date
				margin-bottom 1em
			&__day
				font-size 3em
			&__title
				font-size 0.8em
				line-height 1.2em
			&__text
				max-height 37%

	&_color_reverted
		background-color color-cold
		&.news-card_type_event
			background-color color-warm
