@import '../../styles/variables.styl'
@import '../../styles/mixins.styl'

.messenger
  border-radius 0.3rem
  overflow hidden

  &__header
    position relative
    width 100%
    padding 1.2rem 1.1rem 2.2rem
    text-align center
    background-color color-cyan
    box-shadow inset 0 -2.5rem 0 darken(desaturate(color-cyan, 0.26), 3.92)

    @media screen and (max-width: 768px)
      box-shadow inset 0 -2rem 0 darken(desaturate(color-cyan, 0.26), 3.92)

  &__name
    padding-bottom 1.9rem
    font lighter 2.428571428571429rem font-family
    text-transform capitalize
    word-spacing -0.02rem
    letter-spacing -0.11rem
    color white
    word-break break-word

    @media screen and (max-width: 768px)
      font-size 2rem
      padding-bottom 1.3rem

  &__photo
    position absolute
    left 50%
    top 100%
    width 6.5rem
    height @width
    border 0.274725275rem solid color-bg
    border-radius 50%
    background-size cover
    background-repeat no-repeat
    transform translateX(-54%) translateY(-50%)
    z-index 2

    @media screen and (max-width: 768px)
      width 5.5rem
      height 5.5rem

  &__container
    padding 1.5rem 1.6rem 1.9rem
    background-color lighten(color-bg, 5.10)
    overflow-y hidden

    @media screen and (max-width: 768px)
      padding 1.2rem 1.2rem 1.6rem

  &__icons
    display flex
    justify-content space-between
    padding 0 0.3rem 0 0.1rem

  &__bubble-icon
    width 1.55rem
    height @width
    background url('./img/bubble-icon.svg') no-repeat
    cursor pointer
    noselect()

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

  &__camera-icon
    width 1.8rem
    height 1.41rem
    background url('./img/camera-icon.svg') no-repeat
    cursor pointer
    noselect()

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

  &__message
    font bold 0.8928571428571429rem font-family
    text-align left
    letter-spacing 0.04rem
    color lighten(saturate(color-text, 0.44), 24.51)

    @media screen and (max-width: 768px)
      font-size 0.8rem

    &_type_inbox
      position relative
      margin 1.4rem auto 0
      padding 1.3rem 1.2rem 1.5rem
      width 100%
      background-color white
      border-radius 0.549450549rem
      overflow-wrap break-word

      @media screen and (max-width: 768px)
        padding 1rem
        margin-top 1rem

      &::before
        content ''
        width 0.72rem
        height @width
        display block
        position absolute
        top 0
        left 50%
        background-color white
        border-radius 0.21978022rem
        transform translate(-90%, -40%) rotate(45deg)

    &_type_outbox
      width 98%
      padding 1.12rem 1rem 1.56rem
      margin 1.5rem auto 1rem
      background-color color-bg
      border none 
      border-radius 0.274725275rem
      box-shadow 0 0 0 0.21978022rem white
      resize none
      outline none

      @media screen and (max-width: 768px)
        padding 1rem
        margin-top 1rem

  &__text
    overflow-y auto
    
  &__button
    width 100%
    font-size 0.85rem


