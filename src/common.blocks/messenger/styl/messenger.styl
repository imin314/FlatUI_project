.messenger
  display flex
  flex-flow column nowrap
  width 100%
  height inherit
  margin 0 auto
  border-radius 0.3rem
  overflow hidden
  &__header
    position relative
    flex 1 1 150px
    width 100%
    padding 1.2rem 1.1rem
    text-align center
    background-color color-cold
    box-shadow inset 0 -2.5rem 0 #46ab9d
    @media screen and (max-width: 820px)
      box-shadow inset 0 -2rem 0 #46ab9d
  &__name
    padding-bottom 2rem
    color white
    font-size 2.428571428571429rem
    font-weight lighter
    text-transform capitalize
    word-spacing -0.24rem
    letter-spacing -0.11rem
    word-break break-word
    @media screen and (max-width: 820px)
      font-size 2rem
  &__photo
    position absolute
    left 50%
    top 100%
    width 6.5rem
    height @width 
    border 5px solid #e5e5e5
    border-radius 50%
    background-size cover
    background-repeat no-repeat
    transform translateX(-54%) translateY(-50%)
    z-index 2
    @media screen and (max-width: 820px)
      width 5.5rem
      height @width
  &__container
    display flex
    flex-flow column nowrap
    justify-content space-between
    flex 1 1 22.3rem
    padding 1.5rem 1.6rem 1.9rem
    background-color #f2f2f2
    overflow-y hidden
    @media screen and (max-width: 820px)
      padding 1rem 1.2rem 1.5rem
  &__icons
    flex 0 0 auto
    display flex
    justify-content space-between
    padding 0 0.2rem 0 0.4rem
  &__bubble-icon
    width 1.55rem
    height @width
    background-image url('../assets/img/bubble-icon.svg')
    background-repeat no-repeat
    cursor pointer
    &:hover
      @media (hover:hover)
        transform scale(1.1)
    &:active
      @media (hover:hover)
        transform scale(0.9)
      @media (hover:none)
        transform scale(1.1)
  &__camera-icon
    width 1.8rem
    height 1.41rem
    background-image url('../assets/img/camera-icon.svg')
    background-repeat no-repeat
    cursor pointer
    &:hover
      @media (hover:hover)
        transform scale(1.1)
    &:active
      @media (hover:hover)
        transform scale(0.9)
      @media (hover:none)
        transform scale(1.1)
  &__message
    font-size 0.8928571428571429rem
    font-weight bold
    text-align left
    letter-spacing 0.036rem
    color #8e8d8d
    margin 0.5rem auto
    @media screen and (max-width: 820px)
      font-size 0.8rem
    &_type_inbox
      position relative
      flex 0 1 88.9px
      padding 1.2rem 1.34rem 1.6rem
      width 100%
      background-color white
      border-radius 10px
      overflow-y auto
      overflow-wrap break-word
      @media screen and (max-width: 820px)
        padding 1rem
      &::before
        content ''
        width 0.72rem
        height @width
        display block
        position absolute
        top 0
        left 50%
        background-color white
        border-radius 4px
        transform translate(-90%, -40%) rotate(45deg)
    &_type_outbox
      width 98%
      flex 0 2 5.8rem
      padding 1.07rem 1.16rem
      background-color color-bg
      border none 
      border-radius 5px
      box-shadow 0 0 0 4px white
      resize none
      outline none
      @media screen and (max-width: 820px)
        flex-basis 5rem
  &__button
    width 100%
    margin-top 0.5rem
    font-size 0.85rem


