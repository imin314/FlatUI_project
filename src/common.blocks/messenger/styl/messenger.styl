@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.messenger
  border-radius 0.3rem
  overflow hidden

  &__header
    position relative
    width 100%
    padding 1.2rem 1.1rem 2.2rem
    text-align center
    background-color color-cyan
    box-shadow inset 0 -2.5rem 0 #46ab9d

  &__name
    padding-bottom 1.9rem
    font-size 2.428571428571429rem
    font-weight lighter
    text-transform capitalize
    word-spacing -0.02rem
    letter-spacing -0.11rem
    color white
    word-break break-word

  &__photo
    position absolute
    left 50%
    top 100%
    width 6.5rem
    height @width
    border remofy(5px) solid #e5e5e5
    border-radius 50%
    background-size cover
    background-repeat no-repeat
    transform translateX(-54%) translateY(-50%)
    z-index 2

  &__container
    padding 1.5rem 1.6rem 1.9rem
    background-color #f2f2f2
    overflow-y hidden

  &__icons
    display flex
    justify-content space-between
    padding 0 0.3rem 0 0.1rem

  &__bubble-icon
    width 1.55rem
    height @width
    background-image url('../../../assets/img/bubble-icon.svg')
    background-repeat no-repeat
    cursor pointer

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

  &__camera-icon
    width 1.8rem
    height 1.41rem
    background-image url('../../../assets/img/camera-icon.svg')
    background-repeat no-repeat
    cursor pointer

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

  &__message
    font-size 0.8928571428571429rem
    font-family font-family
    font-weight bold
    text-align left
    letter-spacing 0.04rem
    color #8e8d8d

    &_type_inbox
      position relative
      margin 1.4rem auto 0
      padding 1.3rem 1.2rem 1.5rem
      width 100%
      background-color white
      border-radius remify(10px)
      overflow-wrap break-word

      &::before
        content ''
        width 0.72rem
        height @width
        display block
        position absolute
        top 0
        left 50%
        background-color white
        border-radius remify(4px)
        transform translate(-90%, -40%) rotate(45deg)

    &_type_outbox
      width 98%
      padding 1.12rem 1rem 1.56rem
      margin 1.5rem auto 1rem
      background-color color-bg
      border none 
      border-radius remify(5px)
      box-shadow 0 0 0 remify(4px) white
      resize none
      outline none

  &__text
    overflow-y auto
    
  &__button
    width 100%
    font-size 0.85rem


