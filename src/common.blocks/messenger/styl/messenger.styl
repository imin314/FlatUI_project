.messenger
  margin 0 auto
  border-radius 0.3rem
  overflow hidden
  font-size 1rem
  @media screen and (max-width: 425px)
    font-size 0.8rem
  &__header
    position relative
    width 100%
    padding 1.2em 1.1em 2.2em
    text-align center
    background-color color-cold
    box-shadow inset 0 -2.5em 0 #46ab9d
  &__name
    padding-bottom 0.823529412em
    color white
    font-size 2.428571428571429rem
    font-weight lighter
    text-transform capitalize
    word-spacing -0.01em
    letter-spacing -0.045em
    word-break break-word
    @media screen and (max-width: 425px)
      font-size 2rem
  &__photo
    position absolute
    left 50%
    top 100%
    width 6.5rem
    height @width
    border 5px solid #e5e5e5
    border-radius 50%
    background-size cover
    background-repeat no-repeat
    transform translateX(-54%) translateY(-50%)
    z-index 2
    @media screen and (max-width: 425px)
      width 5.5rem
      height @width
  &__container
    padding 1.5em 1.6em 1.9em
    background-color #f2f2f2
    overflow-y hidden
  &__icons
    display flex
    justify-content space-between
    padding 0 0.2em 0 0.4em
  &__bubble-icon
    width 1.55em
    height @width
    background-image url('../assets/img/bubble-icon.svg')
    background-repeat no-repeat
    cursor pointer
    &:hover
      @media (hover:hover)
        transform scale(1.1)
    &:active
      @media (hover:hover)
        transform scale(0.9)
      @media (hover:none)
        transform scale(1.1)
  &__camera-icon
    width 1.8em
    height 1.41em
    background-image url('../assets/img/camera-icon.svg')
    background-repeat no-repeat
    cursor pointer
    &:hover
      @media (hover:hover)
        transform scale(1.1)
    &:active
      @media (hover:hover)
        transform scale(0.9)
      @media (hover:none)
        transform scale(1.1)
  &__message
    font-size 0.8928571428571429rem
    font-family font-family
    font-weight bold
    text-align left
    letter-spacing 0.04em
    color #8e8d8d
    @media screen and (max-width: 425px)
      font-size 0.8rem
    &_type_inbox
      position relative
      margin 1.4rem auto 0
      padding 1.344em 1.5em 1.792em
      width 100%
      background-color white
      border-radius 10px
      overflow-wrap break-word
      @media screen and (max-width: 425px)
        margin-top 1.1rem
      &::before
        content ''
        width 0.72rem
        height @width
        display block
        position absolute
        top 0
        left 50%
        background-color white
        border-radius 4px
        transform translate(-90%, -40%) rotate(45deg)
    &_type_outbox
      width 98%
      padding 1.12em 1.3em 1.68em
      margin 1.5rem auto 1.2rem
      background-color color-bg
      border none 
      border-radius 5px
      box-shadow 0 0 0 4px white
      resize none
      outline none
      @media screen and (max-width: 425px)
        margin 1.3rem auto 1rem
  &__text
    overflow-y auto
  &__button
    width 100%
    font-size 0.85rem


