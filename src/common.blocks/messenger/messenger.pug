include ../button/button.pug

mixin messenger(data)
	- var image = require("./assets/img/"+ data.image)
	.messenger
		.messenger__header
			.messenger__name= data.name
			.messenger__photo(style='background-image: url('+image+')')
		.messenger__icons
		.messenger__container
			.messenger__message.messenger__message_type_inbox= "Hey! So are we cool to meet at the art gallery? Say 8pm"
			textarea.messenger__message.messenger__message_type_outbox(name='outbox' placeholder='Type Something' ) Yeah that sounds great. See you then.
			.messenger__button
				+button('reply')(type='submit' value='Submit' class='button_color_reverse button_size_responsive')

		