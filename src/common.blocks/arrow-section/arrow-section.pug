include ../arrow-button/arrow-button.pug

mixin arrowSection(settings = {})
  - const { title = 'arrow buttons' } = settings;
  section.arrow-section
    h2.arrow-section__title= title
    .arrow-section__container
      .arrow-section__button
        +arrowButton({ direction: 'left' })
      .arrow-section__button
        +arrowButton({ direction: 'right' })
      .arrow-section__button
        +arrowButton({ direction: 'left', disabled: true })
      .arrow-section__button
        +arrowButton({ direction: 'right', disabled: true })
      .arrow-section__button
        +arrowButton({ direction: 'left' })
      .arrow-section__button
        +arrowButton({ direction: 'right' })