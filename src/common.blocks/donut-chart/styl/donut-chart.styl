@import '../../../styles/variables.styl'

.donut-chart
  position relative

  & circle
    stroke-width 0.384615384615385rem

  &__label
    display block
    position absolute
    top 46%
    left 50%
    font-size 2.857142857142857rem
    font-weight lighter
    color darken(color-bg, 49)
    transform translate(-50%, -50%)
  
  &_type_percentage circle
    stroke-width 0.10989010989011rem

