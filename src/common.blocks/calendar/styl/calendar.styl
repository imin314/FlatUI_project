@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.calendar
  font-family font-family
  background-color #f2f2f2
  border-radius 0.3rem
  overflow hidden

  &__day-container
    padding 0.6rem 0 0.3rem
    width 100%
    background-color color-orange
    text-align center
  
  &__day-text
    font-size 5.714285714rem
    font-weight lighter
    color white
    background none
    border none

  & .ui-datepicker-header
    display flex
    justify-content space-between
    align-items center
    padding 0.7rem 1.1rem
    background-color #d54c2c
    color white
  
  & .ui-datepicker-prev
    order 1
    flex 0 0 0.8rem
    height 0.8rem
    border 0.15rem white solid
    border-right-color transparent
    border-bottom-color transparent
    transform rotate(-45deg)
    cursor pointer

    &:active
      translate transformX(-0.5rem)
  
  & .ui-datepicker-next
    order 3
    flex 0 0 0.8rem
    height 0.8rem
    border 0.15rem white solid
    border-right-color transparent
    border-bottom-color transparent
    transform rotate(135deg)
    cursor pointer

    &:active
      translate transformX(0.5rem)

  & .ui-datepicker-title
    order 2
    font-size 1.7rem
    font-weight lighter
    letter-spacing -0.04rem
    line-height 1.7rem

  & .ui-datepicker-year
    display none
  
  & .ui-datepicker-calendar
    width calc(100% + 1px)
    border-spacing 0

    & thead
      background-color color-orange
      font-size remify(11.7px)
      font-weight bold
      color white
      text-transform uppercase
    
    & th
      padding 0.65rem

    & td
      padding 0.5rem 0.25rem
      width 14.28571428571429%
      text-align center
      border-right 1px solid white
      border-bottom 1px solid white
      cursor pointer

      &:last-child
        border-right none
      
      &:not(.ui-datepicker-unselectable):hover
        @media (hover: hover)
          background-color color-orange

          & .ui-state-default
            color white
      
    & .ui-datepicker-current-day
      background-color color-orange
              
      & .ui-state-default
      & .ui-state-default:focus
        color white
    
    & .ui-datepicker-days-cell-over
      box-shadow inset 0 0 0 0.10989011rem color-orange

    & .ui-state-default
      font-family ui-font-family
      font-size 1.428571429rem
      color #868686
      text-decoration none
      outline none

      &:focus
        color color-orange

    & .ui-state-disabled
      cursor text

      & .ui-state-default
        color white

  &__button-pane
    padding 1.2rem 1.37rem
    text-align left
    background-color color-bg
  
  &__today-button
    font-family font-family
    font-size 1rem
    font-weight bold
    text-transform uppercase
    color #868686
    background none
    border none
    cursor pointer
    outline none

    &:focus
    &:active
      color color-orange
