.news-section
	&__header
		margin-bottom 2.4rem

	&__container
		width 100%
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content center

	&__news-card
		width 48.44%
		height 29.8vw
		max-width 445.61px
		max-height 327.8px
		min-width 260.11px
		min-height 193.69px
		flex-shrink 1
		&:first-child
			margin-right 3%
			@media screen and (max-width: 650px)
				margin 2%
			
		
