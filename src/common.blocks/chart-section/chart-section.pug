include ../donut-chart/donut-chart.pug

mixin chartSection()
  section.chart-section
    h2.chart-section__title percentages / pie chart
    .chart-section__container
      .chart-section__chart
        +donutChart({ values: '0', type: 'percentage' })
      .chart-section__chart
        +donutChart({ values: '38', type: 'percentage' })
      .chart-section__chart
        +donutChart({ values: '62', type: 'percentage' })
      .chart-section__chart
        +donutChart({ values: '89', type: 'percentage' })
      .chart-section__chart
        +donutChart({ values: '12.5, 25, 30', type: 'pie' })