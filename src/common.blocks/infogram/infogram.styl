@import '../../styles/variables.styl'
@import '../../styles/mixins.styl'

.infogram
  display table
  width 100%
  padding 0

  &__stat-item
    display table-row
    margin 0
    padding 0
    list-style none

  &__comment
    display table-cell
    vertical-align middle
    font lighter 1rem font-family
    color color-text
    border-left 1.3rem solid transparent

    &:first-child
      border-left none
      border-right 0.8rem solid transparent

  &__highlight
    font bold 1.2rem font-family
    for num in (1..3)
      &:nth-child({num})
        color setColorByIndex(num)

  &__chart
    display table-cell
    width 6.593406593rem
    vertical-align middle
    font-size 0.8rem
    
  &__number
    display table-cell
    vertical-align middle
    font bold 3rem font-family
    text-align right
    color color-cyan-darker