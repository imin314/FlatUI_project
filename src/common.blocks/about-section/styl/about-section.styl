@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.about-section
  width 100%
  background-color color-bg

  &__block
    display flex
    width 100%

  &__title
    sectionTitle()
    margin 2rem 0 1rem

    &:first-of-type
      margin-top 0

  &__subtitle
    margin 1rem 0 0.5rem
    font-weight bold
    font-size 1rem
    color color-cyan

  &__text
    flex 600px 2 2
    padding 2rem

  &__intro
    font-size 1rem
    text-align justify
    color color-text

    &:first-of-type
      clearfix()

    & span 
      display block
      padding-top 0.9rem

    & a
      float right
      margin-top 0.9rem
      color color-orange
      text-decoration underline

      &:hover
        @media (hover:hover)
          text-decoration none

      &:active
        @media (hover:hover)
          text-decoration underline
          color color-text

        @media (hover:none)
          text-decoration none

  &__right-col
    flex 400px 1 1
    padding 1rem
    text-align center
    background-color white

  &__video
    position relative
    top 50%
    width 100%
    max-width 600px
    margin 0 auto
    transform translateY(-50%)



  
    
