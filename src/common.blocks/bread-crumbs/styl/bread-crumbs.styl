.bread-crumbs
	display flex
	justify-content space-between
	flex-wrap nowrap
	flex-direction row
	width 100%
	padding 0
	align-items center

	&__item
		flex 179px 1 1
		list-style-type none
		position relative
		&:last-child
			flex auto 0 0
			&::after
				display none
		&::after
			content ""
			display block
			height 6px
			width 100%
			position absolute
			background color-warm
			top 50%
			transform translateY(-50%)
			z-index -1
		&_active 
			&::after
			& ~ .bread-crumbs__item .bread-crumbs__circle
			& ~ .bread-crumbs__item::after
				background-color color-bg
		

	&__circle
		font-size 1rem
		font-weight bold
		width 37px
		height @width
		padding-top 6px
		text-align center
		border-radius 50%
		background color-warm
		color white
		font-weight bold

