.bread-crumbs
  display flex
  justify-content space-between
  align-items center
  flex-wrap nowrap
  flex-direction row
  width 100%
  padding 0

  &__item
    flex 179px 1 1
    position relative
    z-index 0
    font-size 1rem
    list-style-type none
    transition all 0.2s ease 

    @media screen and (max-width: 550px)
      font-size 0.85rem

    &:nth-child(1)
      flex-basis 170px

    &:nth-child(2)
      flex-basis 185px

    &:last-child
      flex auto 0 0

      &::after
        display none

    &::after
      content ''
      display block
      position absolute
      top 50%
      z-index -1      
      width 100%
      height 0.3296703296703297em
      font-size inherit
      background color-warm
      transform translateY(-50%)
      transition all 0.2s ease

    &_active 
      &::after
      & ~ ^[1] ^[0]__circle
      & ~ ^[1]::after
        background-color color-bg
        transition all 0.2s ease

  &__circle
    width 2.032967032967033em
    height @width
    padding-top 0.32967032967033em
    font-size inherit
    font-weight bold
    font-weight bold
    text-align center
    color white
    border-radius 50%
    background color-warm
    transition all 0.2s ease

