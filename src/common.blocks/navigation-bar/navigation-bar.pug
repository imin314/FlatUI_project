mixin navigationBar(settings)
  -
    const defaultMenu = [
      {
        link: "index.html",
        text: "Home"
      },
      {
        link: "registration.html",
        text: "Registration"
      },
      {
        link: "schedule.html",
        text: "Schedule"
      },
      {
        link: "speakers.html",
        text: "Speakers"
      },
      {
        link: "contacts.html",
        text: "Contacts"
      },
      {
        link: "uidemo.html",
        text: "UI Kit Demo"
      }
    ];
    const navData = settings || defaultMenu;
  nav.navigation-bar
    input.navigation-bar__toggle(id="toggle" type="checkbox")
    label.navigation-bar__icon(for="toggle")
      span.navigation-bar__icon-line
      span.navigation-bar__icon-line
      span.navigation-bar__icon-line
    ul.navigation-bar__menu
      each item in navData
        - const { link, text } = item;
        li.navigation-bar__item
          a.navigation-bar__link(href=link title=text)= text