@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.map
  width 100%
  border-radius 0.274725275rem
  overflow hidden

  &__container
    width 100%
    height 28.5vw
    min-height 264px

  &__footer
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-between
    align-items center
    padding 0.6rem 4.3% 1rem
    background-color color-orange

  &__title
    color white
    font-size 2.142857142857143rem
    flex-grow 0
    font-weight lighter
    margin-right 4.7%

  &__address
    flex-grow 0
    paddint-top 0.3rem
    text-align left

  &__address-item
    color white
    text-transform uppercase
    font-size 0.8928571428571429rem
    font-weight bold

    &_type_street
      letter-spacing 0.045rem

    &_type_city
      letter-spacing 0.03rem

  &__icons
    flex-grow 1
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content flex-end
    align-items center
    padding-top 0.3rem

  &__search
    position relative
    margin-right 1.9rem
    flex 0 0 1.3rem
    height 1.3rem 
    border-radius 50%
    border 0.1098901098901099rem solid white
    cursor pointer
    outline none

    &::before
      content ''
      position absolute
      top 50%
      left 0
      height 0.1098901098901099rem
      width 1.8rem
      border-left 0.5494505494505495rem solid white
      border-right 0.549450549450545rem solid white
      transform translate(-20%,-50%)

    &::after
      content ''
      position absolute
      top 0
      left 50%
      height 1.8rem
      width 0.1098901098901099rem
      border-top 0.5494505494505495rem solid white
      border-bottom 0.5494505494505495rem solid white
      transform translate(-50%,-20%)

    &:focus
      transform scale(1.1)

      &::before
        transform translate(-18%,-50%) scale(1.1)

      &::after
        transform translate(-50%,-18%) scale(1.1)

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:hover::before
      @media (hover:hover)
        transform translate(-18%,-50%) scale(1.1)

    &:hover::after
      @media (hover:hover)
        transform translate(-50%,-18%) scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

    &:active::before
      @media (hover:hover)
        transform translate(-18%,-50%) scale(0.9)

      @media (hover:none)
        transform translate(-18%,-50%) scale(1.1)

    &:active::after
      @media (hover:hover)
        transform translate(-50%,-18%) scale(0.9)

      @media (hover:none)
        transform translate(-50%,-18%) scale(1.1)

  &__pin
    flex 0 0 1.208791208791209rem  
    height 3rem
    cursor pointer
    outline none

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)
        
    &:focus
      transform scale(1.1)