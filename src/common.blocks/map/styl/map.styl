@import '../../../styles/variables.styl'
@import '../../../styles/mixins.styl'

.map
  width 100%
  border-radius 0.274725275rem
  overflow hidden
  background-color color-bg

  &__container
    width 100%
    height 28.5vw
    min-height 264px

  &__footer
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-between
    align-items center
    padding 1rem 4.3% 1.3rem
    background-color color-orange

    @media screen and (max-width: 600px)
      flex-wrap wrap
      padding 0.6rem 4.3%

  &__title
    color white
    font-size 2.142857142857143rem
    flex auto 0 0
    font-weight lighter
    margin-right 4.7%

    @media screen and (max-width: 450px)
      font-size 1.8rem

  &__address
    flex auto 0 0
    padding-top 0.3rem
    text-align left

    @media screen and (max-width: 450px)
      order 2

  &__address-item
    color white
    text-transform uppercase
    font-size 0.8928571428571429rem
    font-weight bold

    @media screen and (max-width: 450px)
      font-size 0.7rem

    &_type_street
      letter-spacing 0.045rem

    &_type_city
      letter-spacing 0.03rem

  &__icons
    flex-grow 1
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content flex-end
    align-items center
    padding-top 0.3rem

    @media screen and (max-width: 450px)
      order 1
      flex 80px 1 1

  &__search
    font-size 1rem
    position relative
    margin-right 1.9rem
    flex 0 0 1.3em
    height 1.3em 
    border-radius 50%
    border 0.1098901098901099rem solid white
    cursor pointer
    outline none

    @media screen and (max-width: 450px)
      font-size 0.85rem

    &::before
      content ''
      position absolute
      top 50%
      left 0
      height 0.1098901098901099rem
      width 1.7em
      border-left 0.5494505494505495em solid white
      border-right 0.549450549450545em solid white
      transform translate(-20%,-50%)

    &::after
      content ''
      position absolute
      top 0
      left 50%
      height 1.8em
      width 0.1098901098901099rem
      border-top 0.5494505494505495em solid white
      border-bottom 0.5494505494505495em solid white
      transform translate(-50%,-20%)

    &:focus
      transform scale(1.1)

      &::before
        transform translate(-18%,-50%) scale(1.1)

      &::after
        transform translate(-50%,-18%) scale(1.1)

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:hover::before
      @media (hover:hover)
        transform translate(-18%,-50%) scale(1.1)

    &:hover::after
      @media (hover:hover)
        transform translate(-50%,-18%) scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)

    &:active::before
      @media (hover:hover)
        transform translate(-18%,-50%) scale(0.9)

      @media (hover:none)
        transform translate(-18%,-50%) scale(1.1)

    &:active::after
      @media (hover:hover)
        transform translate(-50%,-18%) scale(0.9)

      @media (hover:none)
        transform translate(-50%,-18%) scale(1.1)

  &__pin
    flex 0 0 1.208791208791209rem
    align-self stretch
    cursor pointer
    outline none

    @media screen and (max-width: 450px)
      flex-basis 1rem

    &:hover
      @media (hover:hover)
        transform scale(1.1)

    &:active
      @media (hover:hover)
        transform scale(0.9)

      @media (hover:none)
        transform scale(1.1)
        
    &:focus
      transform scale(1.1)