mixin map(settings = {})
  -
    const {
      address: { street = '', city = ''} = {},
      mapCenter: { lat: mapLat = 26.893505, lng: mapLng = 80.967422 } = {},
      pinCenter: { lat: pinLat = 26.893505, lng: pinLng = 80.967422 } = {},
      title = 'Meet us!',
    } = settings;
  section.map.js-map
    .map__container.js-map__container(
      data-lat= mapLat
      data-lng= mapLng
      data-plat= pinLat
      data-plng= pinLng
    )
    .map__footer
      .map__title= title
      .map__address
        .map__address-item.map__address-item_type_street= street
        .map__address-item.map__address-item_type_city= city
      .map__buttons
        .map__button.js-map__button.map__button_type_search.js-map__button_type_search(tabindex="0")
        .map__button.js-map__button.map__button_type_pin.js-map__button_type_pin(tabindex="0")
          .map__pin-circle