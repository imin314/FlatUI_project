include ../pin/pin.pug

mixin map(_settings)
    - var settings = {
    - id: _settings.id!=undefined?_settings.id:"map",
    - address: _settings.address!=undefined?_settings.address:{street: "", city: ""},
    - mapCenter: _settings.mapCenter!=undefined?_settings.mapCenter:{lat: 26.893505, lng: 80.967422},
    - pinCenter: _settings.pinCenter!=undefined?_settings.pinCenter:{lat: 26.893505, lng: 80.967422},
    -}
    section.map
        .map__container(id=settings.id, data-lat= settings.mapCenter.lat, data-lng= settings.mapCenter.lng, data-plat= settings.pinCenter.lat, data-plng= settings.pinCenter.lng)
        .map__footer
            .map__title Meet us!
            .map__address
                .map__street=settings.address.street
                .map__city=settings.address.city
            .map__icons
                .map__search
                .map__pin
                    +pin({mainColor: "white", backColor: "transparent"})