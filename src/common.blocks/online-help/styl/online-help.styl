@import '../../../styles/variables.styl'

.online-help
  position fixed
  bottom 1.098901099rem
  right 1.098901099rem
  z-index 5000

  &__messenger
    visibility hidden
    position absolute
    bottom 3.296703297rem
    right 0
    width 17.58241758rem
    box-shadow 0 0 1.098901099rem 0 rgba(0,0,0,0.3)

    &_visible
      visibility visible

  &__button
    position absolute
    bottom 0
    right 0
    width 2.747252747rem
    height @width
    background color-orange url('../img/bubble-icon_white.svg') center no-repeat
    background-size 1.373626374rem
    border none
    border-radius 0.384615385rem
    box-shadow 0 0 0.549450549rem 0 rgba(0,0,0,0.4)
    z-index 10
    outline none
    cursor pointer

    &:hover
      @media (hover:hover)
        background-color darker(color-bg, 50%)

    &:active
      @media (hover:none)
        background-color darker(color-bg, 50%)