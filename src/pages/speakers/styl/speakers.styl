.speakers
  display flex
  flex-direction column
  min-height 100%
  width 100%

  &__main
    flex 1 0 auto
    width 100%
    margin 100px auto 0

    @media screen and (max-width: 425px)
      margin-top 60px

  &__title
    pageTitle()

  &__intro
    font-size 1rem
    font-weight lighter
    text-align center
    margin 1rem auto 2rem
    width 100%
    max-width 800px
    padding 0 1rem

  &__search
    width 100%
    max-width 800px
    margin 1rem auto
    padding 0 1rem

  &__link
    color color-cold
    text-decoration underline
    cursor pointer
    line-height 1rem
    margin 0 1rem 0.3rem

    &:hover
      @media (hover:hover)
        text-decoration none 

    &:active
    &:visited
      @media (hover:hover)
        text-decoration underline

      @media (hover:none)
        text-decoration none 

  &__card-carousel
    width 100%
    border-left 10px solid white
    border-right 10px solid white
    @media screen and (max-width: 425px)
      border none

  &__controls
    font-size 1rem
    display flex
    justify-content center
    align-items center
    margin-bottom 3rem

    &_hidden
      display none

  &__left-button
    font-size 0.5rem
    margin-right 1em
    flex auto 0 0

  &__right-button
    font-size 0.5rem
    margin-left 1em
    flex auto 0 0

  &__cards
    font-size 1rem
    border-radius 10px
    background-color #c6c6c6
    width 100%
    padding 10px 10px 0 10px
    margin-top 3rem
    margin-bottom 1rem

    @media screen and (max-width: 768px)
      font-size 0.8rem

  &__card-wrapper
    display flex
    flex-direction row
    overflow-x auto
    align-items stretch
    justify-content center

  &__card
    width 21rem
    flex-shrink 0
    overflow hidden
    margin-right 0.8rem

    &:last-child
      margin-right 0

    @media screen and (max-width: 425px)
      width 90%

  &_view_small
    & ^[0]__left-button
    & ^[0]__right-button
      display none

    & ^[0]__cards
      text-align center
      background-color white

    & ^[0]__card-wrapper
      flex-wrap wrap

    & ^[0]__card
      margin 0 0 1rem

      &:nth-child(n+4)
        display none

    &^[0]_view_full ^[0]__card-wrapper
      max-height none
      
  &_view_full
    & ^[0]__left-button
    & ^[0]__right-button
      display none

    & ^[0]__cards
      text-align center
      background-color white

    & ^[0]__card-wrapper
      flex-wrap wrap

    & ^[0]__card
      margin 0 0.8rem 1rem 0.8rem

    &^[0]_view_small ^[0]__card
      margin 0 0 1rem
      display block

&__footer
  flex 0 0 auto