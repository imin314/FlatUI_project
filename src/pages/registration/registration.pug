//- registration.pug
extends ../../templates/layout.pug

include ../../common.blocks/bread-crumbs/bread-crumbs.pug
include ../../common.blocks/registration-form/registration-form.pug
include ../../common.blocks/footer-section/footer-section.pug

block title
  title Register

block content
  .registration.js-registration
    main.registration__main
      header.registration__header.js-registration__header
        h1.registration__title Join us at Web Talks 2019
        .registration__bread-crumbs
          +breadCrumbs({ active: 1, max: 3 })
      .registration__form
        +registrationForm()
    footer.registration__footer
      +footerSection()
  