//- contacts.pug
extends ../../pug/layout.pug

block title
  title Contact Us

block content
  .contacts
    main.contacts__main
      h1.contacts__title Contact Us
      section.contacts__email
        p.contacts__text Got a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
        .contacts__form
          +emailForm()
      section.contacts__map
        +map({
          address: {
            street: '14 Karla Marksa st',
            city: 'Tomsk, Russia'
          },
          mapCenter: {
            lat: 56.490925,
            lng: 84.946053
          },
          pinCenter: {
            lat: 56.490025,
            lng: 84.946053
          }
        })
      aside.contacts__online-help
        +onlineHelp()
    footer.contacts__footer
      +footerSection()

block scripts
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0GpB2Y8XOyVrs-stxlE0I4yR_rAaEyjU")