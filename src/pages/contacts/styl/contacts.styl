@import '../../../styles/mixins.styl'

.contacts
  display flex
  flex-flow column nowrap
  min-height 100%

  &__main
    flex 1 0 auto
    width 90%
    max-width 54.9rem
    margin 5.494505495rem auto 2rem

  &__title
    pageTitle()

  &__email
    margin 3rem auto 0

  &__text
    font lighter 1rem font-family
    text-align center

  &__form
    margin 2rem auto 0
    width 100%

  &__map
    margin 3rem auto 0
    
  &__footer
    flex 0 0 auto