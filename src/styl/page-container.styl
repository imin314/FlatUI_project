.page-container
	width 87%
	margin 0 auto
	padding-top remify(105px)
	padding-bottom remify(100px)
	text-align center
	@media screen and (max-width: 689px)
		padding-top 4rem
	/*display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-content space-between*/

.page-container__button-section
	width percentage(605px/791.69px)
	margin 0 auto
	@media screen and (max-width: 915px)
		width 100%

.page-container__arrow-section
	width percentage(549px/791.69px)
	margin 2rem auto 0
	max-width 610px
	@media screen and (max-width: 915px)
		width 100%
	@media screen and (max-width: 689px)	
		max-width 260px

.page-container__chart-section
	//width 790px
	width 100%
	margin 1.65rem auto 0
	@media screen and (max-width: 915px)
		max-width 640px

.page-container__slider-section
	width percentage(771px/791.69px)
	margin remify(15px) auto 0

.page-container__stages-section
	width percentage(776px/791.69px)
	margin 0 auto

.page-container__form-section
	width percentage(773px/791.69px)
	margin 4.1rem auto 0

.page-container__search-section
	width percentage(375px/791.69px)
	margin remify(37px) percentage(45px/791.69px) 0 percentage(10px/791.69px)
	float left
	@media screen and (max-width: 915px)
		float none
		margin-left auto
		margin-right auto
		width 100%

.page-container__profile-section
	width percentage(348px/791.69px)
	margin-top remify(37px)
	float left
	@media screen and (max-width: 915px)
		float none
		margin-left auto
		margin-right auto
		width 100%

.page-container__news-section
	width percentage(772px/791.69px)
	margin 4.7rem auto 0
	@media screen and (max-width: 900px)
		margin 2rem auto 0

.page-container__map-section
	width 97.3%
	margin 3.3rem auto 0

.page-container__calendar-section
	width percentage(363px/791.69px)
	float left
	margin 3.6rem 0 0 0.55rem

.page-container__video-section
	width 100%
