.registration-page
	width 70%
	margin 2rem auto
	@media screen and (max-width:768px)
		width 90%
	&__header
		width 80%
		background linear-gradient(top, rgba(255,255,255,1) 0%,rgba(255,255,255,1) 85%,rgba(255,255,255,0) 86%,rgba(255,255,255,0) 100%)
		z-index 100
		position fixed
		top 58px
		left 50%
		transform translateX(-50%)
		padding 3rem 0 0
		@media screen and (max-width:768px)
			width 95%
		@media screen and (max-width: 425px)
			top 0
	&__bread-crumbs
		width 100%
	&__form
		margin-top 260px