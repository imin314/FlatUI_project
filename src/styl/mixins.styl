clearfix()
  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both
  zoom: 1 if support-for-ie

sectionTitle()
  text-transform uppercase
  font-size header-size
  font-weight bold
  text-align center
  color inherit
  letter-spacing 0.095rem

remify(value) {
  u = unit(value);
  template-font-size = 18.2px
  if (u is 'px') {
    return unit(value/template-font-size, 'rem');
  } else {
    return unit(value, u);
  }
}

noselect()
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none 
  -moz-user-select none
  -ms-user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-tap-highlight-color transparent
  user-select none