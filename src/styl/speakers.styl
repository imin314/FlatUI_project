.speakers-page
	width 100%
	margin 100px auto 0
	@media screen and (max-width: 425px)
		margin-top 100px
	&__intro
		font-size 1rem
		font-weight lighter
		text-align center
		margin 1rem auto 2rem
		width 100%
		max-width 800px
		padding 0 1rem
	&__search
		width 100%
		max-width 800px
		margin 1rem auto
		padding 0 1rem
	&__link
		color color-cold
		text-decoration underline
		cursor pointer
		line-height 1rem
		margin 0 1rem 0.3rem
		&:hover
			text-decoration none 
		&:active
		&:visited
			text-decoration underline
	&__card-carousel
		border-left 10px solid white
		border-right 10px solid white
		@media screen and (max-width: 425px)
			border none
	&__controls
		font-size 1rem
		display flex
		justify-content center
		align-items center
		margin-bottom 3rem
		&_hidden
			display none
	&__left-button
		font-size 0.5rem
		margin-right 1em
		flex auto 0 0
	&__right-button
		font-size 0.5rem
		margin-left 1em
		flex auto 0 0
	&__cards
		font-size 1rem
		border-radius 10px
		background-color #c6c6c6
		width 100%
		padding 10px 10px 0 10px
		margin-top 3rem
		margin-bottom 1rem
		@media screen and (max-width: 768px)
			font-size 0.8rem
	&__card-wrapper
		display flex
		align-items stretch
		justify-content center
	&__card
		width 21em
		overflow hidden
		margin-right 0.8rem
		&:last-child
			margin-right 0
	
	&__view_small
		& .speakers-page__left-button
		& .speakers-page__right-button
			display none
		& .speakers-page__cards
			text-align center
			background-color white
		& .speakers-page__card-wrapper
			flex-wrap wrap
			max-height 850px
			overflow hidden
		& .speakers-page__card
			margin 0 0 1rem
		&.speakers-page__view_full  .speakers-page__card-wrapper
			max-height none
			

	&__view_full
		& .speakers-page__left-button
		& .speakers-page__right-button
			display none
		& .speakers-page__cards
			text-align center
			background-color white
		& .speakers-page__card-wrapper
			flex-wrap wrap
		& .speakers-page__card
			margin 0 0.8rem 1rem 0.8rem
