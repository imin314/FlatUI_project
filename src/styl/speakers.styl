.speakers-page
	width 90%
	margin 2rem auto 0
	&__intro
		font-size 1rem
		font-weight lighter
		text-align center
		margin 1rem auto 2rem
		width 70%
	&__search
		width 70%
		margin 1rem auto
	&__card-carousel
		font-size 1rem
		width 100%
		display flex
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		align-items center
		margin-top 3em
		margin-bottom 3em
		position relative
	&__left-button
		font-size 1em
		flex auto 0 0
		margin-right 1em
	&__right-button
		font-size 1em
		flex auto 0 0
		margin-left 1em
	&__cards
		flex-grow 1
		flex-shrink 1
		width 1000px
		height 380px
		border-radius 10px
		background-color #c6c6c6
		padding 10px 10px 0 10px
	&__card
		width 430px
		vertical-align top
		height 350px
		display inline-block
		overflow hidden
		margin-right 0.8rem
		&:last-child
			margin-right 0
		