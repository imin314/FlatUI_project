.speakers-page
	width 90%
	margin 2rem auto 0
	&__intro
		font-size 1rem
		font-weight lighter
		text-align center
		margin 1rem auto 2rem
		width 70%
	&__search
		width 70%
		margin 1rem auto
	&__card-carousel
		font-size 1rem
		width 100%
		display flex
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		align-items center
		margin-top 3em
		margin-bottom 3em
		position relative
		&::before
			content ''
			display block
			position absolute
			left 3.626373626373626em
			top	0
			width 50px
			height 100%
			z-index 10
			background linear-gradient(to right, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 40%, rgba(255,255,255,0) 100%)
		&::after
			content ''
			display block
			position absolute
			right 3.626373626373626em
			top	0
			width 50px
			height 100%
			z-index 10
			background linear-gradient(to left, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 40%,rgba(255,255,255,0) 100%)
	&__left-button
		font-size 1em
		flex auto 0 0
		margin-right 1em
	&__right-button
		font-size 1em
		flex auto 0 0
		margin-left 1em
	&__card-wrapper
		flex auto 1 1
		overflow hidden
	&__cards
		display flex
		flex-wrap nowrap
		height 350px
		overflow scroll
	&__card
		flex 430px 0 0
		display inline-block
		overflow hidden
		margin-right 0.8rem
		&:last-child
			margin-right 0
		